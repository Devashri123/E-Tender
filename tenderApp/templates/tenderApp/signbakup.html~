        <script type="text/javascript">

$(document).on('submit','#signin',function(e)
{
e.preventDefault();
$.ajax({
type:'POST',
url:'/tenderApp/create_buyer',
data:{
    name:$('#name').val(),
    address:$('#address').val(),
    regNo:$('#regNo').val(),
    contactNo:$('#contactNo').val(),
    email:$('#email').val(),
    password:$('#password').val(),
    csrfmiddlewaretoken:$('input[name=csrfmiddlewaretoken]').val(),
},
success:function(){
alert("New Buyer created successfully");}
});
});
       </script>

