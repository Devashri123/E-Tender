 <body>

 <div class="container">

 <form  id='signin' class="form-signin" method="POST"> {% csrf_token %}
   
      <h2 class="form-signin-heading">Enter Details</h2>
     <label for="inputEmail" class="sr-only">Email address</label>
     <input type="email" id="email" class="form-control" placeholder="Email address" required autofocus>
     <label for="inputPassword" class="sr-only">Password</label>
     <input type="password" id="password" class="form-control"  placeholder="Password" required>
     <button id="submit" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
 </form>

 </div>

<script type="text/javascript" src="{% static 'tenderApp/js/jquery-1.11.1.min.js' %}"></script>

<script type="text/javascript">

$(document).on('submit','#signin',function(e)
{
e.preventDefault();
$.ajax({
type:'POST',
url:'/tenderApp/create_user/',
data:{
    email:$('#email').val(),
    password:$('#password').val(),
    csrfmiddlewaretoken:$('input[name=csrfmiddlewaretoken]').val(),
},
success:function(){
alert("created successfully");}
});
});
</script>
